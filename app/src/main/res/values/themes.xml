<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Messenger" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="android:textColorPrimary">@color/text_primary_light</item>
        <item name="android:textColorSecondary">@color/text_secondary_light</item>
        <item name="android:statusBarColor">@color/primary_color</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Messenger" parent="Base.Theme.Messenger" />

    <style name="Theme.Messenger.Auth" parent="Base.Theme.Messenger">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Messenger.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary_color</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <style name="Theme.Messenger.Button" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Messenger.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Messenger.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_medium</item>
    </style>

    <style name="MessageBubble">
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:maxWidth">280dp</item>
        <item name="cornerRadius">@dimen/message_corner_radius</item>
    </style>

    <style name="MessageBubble.Sent">
        <item name="android:background">@color/message_sent_background</item>
        <item name="android:textColor">@color/message_sent_text</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
    </style>

    <style name="MessageBubble.Received">
        <item name="android:background">@color/message_received_background</item>
        <item name="android:textColor">@color/message_received_text</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_large</item>
    </style>
</resources>